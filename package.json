{
  "name": "relativez",
  "version": "1.0.0",
  "description": "relativez is a tool for visualizing citation relationships in texts.",
  "main": "app.js",
  "scripts": {
    "format": "npx prettier index.html ./css/**.css ./js/**js --write",
    "lint": "npx eslint ./js/**.js --fix",
    "fix": "npm run format && npm run lint",
    "build": "browserify ./js/vis.js -t [ babelify --presets [ @babel/preset-env ] ] -o ./app.js",
    "jsdoc": "npx jsdoc ./js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizunoshoji/relativez.git"
  },
  "author": "mizuno shoji",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mizunoshoji/relativez/issues"
  },
  "homepage": "https://github.com/mizunoshoji/relativez#readme",
  "dependencies": {
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jsdoc": "^3.6.7",
    "prettier": "^2.4.1"
  }
}
